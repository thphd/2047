{%extends 'base.html.jinja'%}
{%block content%}

<div class="threadlist">

  {%for l in oplog%}
    <div class="threadlistitem padded">
      {{macros.avatar(l.user)}}
      {{macros.username(l.user)}}

      <span class="">[{{l.op}}]</span>
      <span class="">[{{l.target}}]</span>

      {%if l.cid -%}
        <span>[->{{l.cid}}]</span>
      {%- endif%}

      <span class=''>[{{format_time_datetime(l.t_c)}}]</span>


      {%if l.reason%}
      <span class="">reason: {{l.reason}}</span>
      {%endif%}
    </div>
  {%endfor%}

</div>

{%endblock%}
